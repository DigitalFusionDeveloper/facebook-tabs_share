<VirtualHost *:80>
  ServerName <%= App.settings.production.url %>
  ServerAlias http://<%= App.identifier %>.production.dojo4.com

  AddDefaultCharset utf-8

  DocumentRoot /ebs/apps/<%= App.identifier %>.production/current/public

  <Directory /ebs/apps/<%= App.identifier %>.staging/current/public>
    AllowOverride All
    Options -MultiViews
  </Directory>

  AddType font/ttf .ttf
  AddType font/eot .eot
  AddType font/otf .otf
  AddType font/woff .woff

  ExpiresActive On
  ExpiresByType image/gif "access plus 3 months"
  ExpiresByType image/jpeg "access plus 3 months"
  ExpiresByType image/png "access plus 3 months"
  ExpiresByType text/css "access plus 1 day"
  ExpiresByType text/javascript "access plus 1 day"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/eot "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
</VirtualHost>
