<%=

  index = Brand.list.map(&:slug)

  index.unshift('__sample__')

  dl_{
    index.each do |brand|

    dt_{ brand }

    prefix = Rails.root.join('public', 'brands', brand).to_s

    %w( index contact locator ).each do |page|
      dd_{ 
          #prefix = Rails.root.join('public', 'brands', brand.slug, "#{ page }.html").to_s
          path = File.join(prefix, "#{ page }.html")
          #path = Rails.root.join('public', 'brands', brand.slug, "#{ page }.html").to_s

          if test(?e, path)
            a_(:href => "./brands/#{ brand }/#{ page }.html", :target => :_blank){ page } 
          end
      } 
    end


  end
  }

%>

