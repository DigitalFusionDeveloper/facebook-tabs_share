<form class="find-location">
  <div id="geoOptions">
    <button id="current_location" class="geoOpt btn btn-primary" type="button">Use Current Location</button>
    <span id="orText" class="geoOpt"> or </span>
    <input id="location" class="geoOpt" name="location" type="text" placeholder="Enter zip, city, or state" />
  </div>

  <button id="submitBtn" class="btn" type="submit">Search</button>
</form>

<%= javascript_include_tag 'geoPosition', 'locator' %>
<%= javascript_tag "window.brand = '#{@brand.slug}'", defer: 'defer' %>
<%= stylesheet_link_tag("locator") %>

<script>
  jQuery(function(){
    var rpc = new RPC(<%= raw url_for(:action => :rpc).to_json %>);

    var geo_location = rpc.call('geo_location', { 'address' : '2030 17th street, boulder, co'  });

    console.log && console.log(geo_location['formatted_address']);
  });
</script>
