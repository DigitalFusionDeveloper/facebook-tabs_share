
<%= form @rfi, :url => request.fullpath do |f| %>

  <%= f.messages %>
  <%= f.errors %>

  <%= f.label :first_name %>
  <%= f.input :first_name %>
  <br>

  <%= f.label :last_name %>
  <%= f.input :last_name %>
  <br>

  <%= f.label :email %>
  <%= f.input :email %>
  <br>

  <% if 'request-beer' == @rfi.rfi_type %>
    <%= f.label :mobile_phone %>
    <%= f.input :mobile_phone %>
    <br>
  <% end %>

  <%= f.label :postal_code %>
  <%= f.input :postal_code %>
  <br>

  <% if 'request-beer' == @rfi.rfi_type %>
    <%= f.label :location %>
    <%= f.input :location %>
    <br>
  <% end %>

  <hr>
  <%= f.submit %>

<% end %>
